+if [ -f "${SYSDIR}/../../debian/changelog" ] ; then
+	# Use timestamp from the most recent debian/changelog entry,
+	# instead of the exact time of the build.
+	t=`dpkg-parsechangelog -l"${SYSDIR}/../../debian/changelog" -S"Date"`
+fi
